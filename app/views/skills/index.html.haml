%section
  .container
    .row
      .col-lg-12
        %h1 All Skills
        = page_entries_info @skills
        %table.table
          %thead
            %tr
              %th Name
              %th Action
          %tbody
            - @skills.each do |skill|
              %tr
                %td= skill.name
                %td
                  = link_to "Show", skill_path(skill), class: "btn btn-info btn-sm"
        = paginate @skills
